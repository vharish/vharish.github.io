---
import { getEntry } from 'astro:content';
import AboutHeroImage from '../assets/blog-placeholder-about.jpg';
import Layout from '../layouts/BlogPost.astro';

const resumeEntry = await getEntry('resume', 'me');
if (!resumeEntry) {
    return Astro.redirect('/404');
}
const { name, summary, education, skills } = resumeEntry.data;
---

<Layout
	title="About Me"
	description={`Professional background of ${name}`}
	pubDate={new Date('January 19 2026')}
	heroImage={AboutHeroImage}
>
	<p>{summary}</p>

	<p>
		Please check out my <a href="/cv">detailed CV</a> for my full professional history and experience.
	</p>

	<h2>Education</h2>
	<ul>
		{education.map(edu => (
			<li>
				<strong>{edu.studyType} in {edu.area}</strong><br/>
				{edu.institution} | {edu.startDate} â€“ {edu.endDate}
			</li>
		))}
	</ul>

	<h2>Skills</h2>
	<div class="space-y-2">
		{skills.map(group => (
			<p>
				<strong>{group.name}:</strong> {group.keywords.join(', ')}
			</p>
		))}
	</div>
</Layout>