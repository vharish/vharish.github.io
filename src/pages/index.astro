---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-50">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-16 sm:py-24">
			<section class="space-y-8">
				<div class="space-y-4">
					<h1 class="text-4xl sm:text-6xl font-extrabold tracking-tight text-slate-900">
						Hi, I'm {SITE_TITLE} <span class="text-accent">üëã</span>
					</h1>
					<p class="text-xl text-slate-600 max-w-2xl leading-relaxed">
						A Software Engineer with 12+ years of experience based in <strong>Bangalore</strong>. 
						Currently building the future of mobile experiences at <strong>Google</strong>.
					</p>
					<div class="flex items-center gap-4 text-sm text-slate-500">
						<span>üìç Bangalore, India</span>
						<span>‚Ä¢</span>
						<a href="mailto:i.v.harish@gmail.com" class="hover:text-accent">i.v.harish@gmail.com</a>
					</div>
				</div>

				<div class="flex flex-wrap gap-4 pt-4">
					<a href="/about" class="px-6 py-3 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 transition-colors">
						View Resume
					</a>
					<a href="/blog" class="px-6 py-3 bg-white text-slate-900 font-medium rounded-lg border border-slate-200 hover:border-slate-300 transition-colors">
						Read Blog
					</a>
				</div>
			</section>

			<section class="mt-24 space-y-8">
				<div class="border-b border-slate-200 pb-4">
					<h2 class="text-2xl font-bold">Core Expertise</h2>
				</div>
				<div class="flex flex-wrap gap-3">
					{[
						'Backend Systems', 'Mobile Extensions', 'Java', 'PHP', 
						'Distributed Systems', 'Cloud Infrastructure', 'API Design', 
						'Team Leadership'
					].map((skill) => (
						<span class="px-4 py-2 bg-white border border-slate-200 text-slate-700 rounded-full text-sm font-medium hover:border-accent transition-colors">
							{skill}
						</span>
					))}
				</div>
			</section>

			<section class="mt-24 space-y-12">
				<div class="border-b border-slate-200 pb-4">
					<h2 class="text-2xl font-bold">Experience Highlights</h2>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<div class="bg-white p-6 rounded-2xl border border-slate-200">
						<h3 class="text-lg font-bold mb-1">Google</h3>
						<p class="text-sm text-accent mb-4 font-medium">Software Engineer</p>
						<p class="text-slate-600 text-sm leading-relaxed">
							Working on Gemini Mobile application and Google Assistant across Headsets and Android TV.
						</p>
					</div>
					<div class="bg-white p-6 rounded-2xl border border-slate-200">
						<h3 class="text-lg font-bold mb-1">Stockopedia</h3>
						<p class="text-sm text-accent mb-4 font-medium">Senior Software Engineer</p>
						<p class="text-slate-600 text-sm leading-relaxed">
							Architected and built the backend for the Stockopedia App ground-up.
						</p>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>