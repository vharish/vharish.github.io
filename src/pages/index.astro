---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import resumeData from '../data/resume.json';

const { basics, work } = resumeData;
const currentWork = work.filter(j => j.endDate === 'Present')[0];
const pastWork = work.filter(j => j.endDate !== 'Present').slice(0, 2);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-50">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-16 sm:py-24">
			<section class="space-y-8">
				<div class="space-y-4">
					<h1 class="text-4xl sm:text-6xl font-extrabold tracking-tight text-slate-900">
						Hi, I'm {basics.name} <span class="text-accent">üëã</span>
					</h1>
					<p class="text-xl text-slate-600 max-w-2xl leading-relaxed">
						{basics.label} with 12+ years of experience based in <strong>{basics.location.split(',')[0]}</strong>. 
						Currently building <strong>AI-powered SaaS</strong> and modular business systems.
					</p>
					<div class="flex items-center gap-4 text-sm text-slate-500">
						<span>üìç {basics.location}</span>
						<span>‚Ä¢</span>
						<a href={`mailto:${basics.email}`} class="hover:text-accent">{basics.email}</a>
					</div>
				</div>

				<div class="flex flex-wrap gap-4 pt-4">
					<a href="/resume" class="px-6 py-3 bg-slate-900 text-white font-medium rounded-lg hover:bg-slate-800 transition-colors">
						View Resume
					</a>
					<a href="/blog" class="px-6 py-3 bg-white text-slate-900 font-medium rounded-lg border border-slate-200 hover:border-slate-300 transition-colors">
						Read Blog
					</a>
				</div>
			</section>

			<section class="mt-24 space-y-8">
				<div class="border-b border-slate-200 pb-4">
					<h2 class="text-2xl font-bold">Current Focus</h2>
				</div>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					{currentWork.highlights.map((h, i) => (
						<div class="bg-white p-6 rounded-2xl border border-slate-200 hover:border-accent transition-colors">
							<div class="text-accent mb-2">
								{i === 0 ? (
									<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
									</svg>
								) : (
									<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								)}
							</div>
							<h3 class="text-lg font-bold mb-2">{h.split(':')[0]}</h3>
							<p class="text-slate-600 text-sm leading-relaxed">
								{h.split(':')[1]}
							</p>
						</div>
					))}
				</div>
			</section>

			<section class="mt-24 space-y-12">
				<div class="border-b border-slate-200 pb-4">
					<h2 class="text-2xl font-bold">Past Experience</h2>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8 text-slate-400">
					{pastWork.map(job => (
						<div class="p-6 rounded-2xl border border-slate-100 bg-slate-50/50">
							<h3 class="text-lg font-bold mb-1 text-slate-600">{job.company}</h3>
							<p class="text-sm mb-4 font-medium">{job.position} ({job.startDate.split(' ')[1] || job.startDate}-{job.endDate.split(' ')[1] || job.endDate})</p>
							<p class="text-sm leading-relaxed">
								{job.highlights[0].split(':')[0]}...
							</p>
						</div>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>