---
import { getEntry, getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const resumeEntry = await getEntry('resume', 'me');
const basics = resumeEntry.data;

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-slate-50">
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-12 sm:py-16 space-y-16">
			
			<!-- Compact Hero -->
			<section class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
				<div class="md:col-span-2 space-y-4">
					<h1 class="text-4xl sm:text-6xl font-extrabold tracking-tighter text-slate-900 leading-tight">
						Engineering <span class="text-accent">Systems.</span><br/>
						Building <span class="text-slate-400">AI.</span>
					</h1>
					<p class="text-lg text-slate-600 max-w-xl leading-relaxed">
						Hi, I'm <strong>Harish</strong>. A software engineer with 12+ years of experience in high-scale backend architecture. Currently building independent AI projects in Bangalore.
					</p>
					<div class="flex flex-wrap gap-3 pt-2">
						<a href="/portfolio" class="px-5 py-2.5 bg-slate-900 text-white text-sm font-bold rounded-lg hover:bg-slate-800 transition-all">
							View Portfolio
						</a>
						<a href="/cv" class="px-5 py-2.5 bg-white text-slate-900 text-sm font-bold rounded-lg border border-slate-200 hover:border-slate-300 transition-all">
							View CV
						</a>
						<a href="/about" class="px-5 py-2.5 text-slate-500 text-sm font-bold rounded-lg hover:text-slate-900 transition-all">
							About Me
						</a>
					</div>
				</div>
				<div class="hidden md:block bg-white p-6 rounded-2xl border border-slate-200 shadow-sm space-y-4">
					<div class="text-xs font-bold text-slate-400 uppercase tracking-widest">Availability</div>
					<p class="text-sm text-slate-600">Open for high-impact collaborations in AI, Backend, and Platform Engineering.</p>
					<a href="mailto:i.v.harish@gmail.com" class="text-sm font-bold text-accent hover:underline">Get in touch →</a>
				</div>
			</section>

			<!-- Latest Writing: More Compact List -->
			<section class="space-y-6">
				<div class="flex items-baseline justify-between border-b border-slate-200 pb-3">
					<h2 class="text-xl font-bold tracking-tight">Latest Writing</h2>
					<a href="/blog" class="text-xs font-bold text-accent hover:underline">View all posts →</a>
				</div>
				<div class="divide-y divide-slate-100">
					{posts.map((post) => (
						<a href={`/blog/${post.id}/`} class="group py-4 flex flex-col sm:flex-row sm:items-baseline justify-between gap-2 first:pt-0">
							<h3 class="text-lg font-bold group-hover:text-accent transition-colors">
								{post.data.title}
							</h3>
							<div class="text-sm text-slate-400 whitespace-nowrap">
								<FormattedDate date={post.data.pubDate} />
							</div>
						</a>
					))}
				</div>
			</section>

			<!-- Two-Column Grid for Stack and Experience -->
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<!-- Current Stack -->
				<section class="space-y-6">
					<div class="border-b border-slate-200 pb-3">
						<h2 class="text-xl font-bold tracking-tight">Current Stack</h2>
					</div>
					<div class="flex flex-wrap gap-2">
						{['Next.js', 'React', 'Tailwind', 'Kotlin', 'Astro', 'AI/LLMs', 'GCP', 'PostgreSQL'].map((skill) => (
							<span class="px-3 py-1.5 bg-white border border-slate-200 text-slate-600 rounded-md text-xs font-bold">
								{skill}
							</span>
						))}
					</div>
				</section>

				<!-- Experience Snippet -->
				<section class="space-y-6">
					<div class="border-b border-slate-200 pb-3">
						<h2 class="text-xl font-bold tracking-tight">Experience</h2>
					</div>
					<div class="space-y-4">
						<div class="flex justify-between items-start">
							<div>
								<h3 class="text-sm font-bold text-slate-900">Google</h3>
								<p class="text-xs text-slate-500">Software Engineer</p>
							</div>
							<span class="text-[10px] font-bold text-slate-400 uppercase">2020 — 2024</span>
						</div>
						<div class="flex justify-between items-start">
							<div>
								<h3 class="text-sm font-bold text-slate-900">Stockopedia</h3>
								<p class="text-xs text-slate-500">Senior Software Engineer</p>
							</div>
							<span class="text-[10px] font-bold text-slate-400 uppercase">2017 — 2020</span>
						</div>
					</div>
				</section>
			</div>

		</main>
		<Footer />
	</body>
</html>